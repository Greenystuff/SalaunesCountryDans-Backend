{
    "name": "salaunes-country-dans-backend",
    "version": "1.0.0",
    "description": "Backend Express TypeScript pour Salaunes Country Dans",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc --noEmitOnError false --skipLibCheck --noImplicitAny false",
        "build:dev": "tsc --noEmitOnError false --skipLibCheck",
        "start": "node dist/index.js",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix"
    },
    "keywords": [
        "express",
        "typescript",
        "mongodb",
        "jwt",
        "docker"
    ],
    "author": "Salaunes Country Dans",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "mongoose": "^8.0.3",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "express-rate-limit": "^7.1.5",
        "dotenv": "^16.3.1",
        "express-validator": "^7.0.1",
        "compression": "^1.7.4",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.4",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/cors": "^2.8.17",
        "@types/compression": "^1.7.5",
        "@types/morgan": "^1.9.9",
        "@types/jest": "^29.5.8",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "eslint": "^8.54.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.2"
    }
}
